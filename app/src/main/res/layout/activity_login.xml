<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".LoginActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/square_one_side_rd"
       android:layout_marginTop="100dp"
       >

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="9dp"
           android:background="@drawable/edit_bg"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp"
           android:hint="@string/email"
           android:drawableStart="@drawable/ic_outline_email_24"
           android:drawablePadding="5dp"
           android:layout_marginTop="80dp"
           android:id="@+id/login_email_txt"
           />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="9dp"
           android:background="@drawable/edit_bg"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp"
           android:hint="@string/password"
           android:inputType="textPassword"
           android:drawableStart="@drawable/ic_outline_security_24"
           android:drawablePadding="5dp"
            android:layout_below="@+id/login_email_txt"
           android:layout_marginTop="20dp"
           android:id="@+id/login_pass_txt"
           />
       <Button
           android:layout_width="150dp"
           android:layout_height="40dp"
           android:background="@drawable/rectangle_button"
           android:text="@string/login"
           android:textColor="@color/colorWhite"
           android:padding="5dp"
           android:id="@+id/login_btn"
           android:layout_above="@+id/signup_txt"
           android:layout_marginBottom="10dp"
           android:layout_marginTop="50dp"
           android:layout_centerHorizontal="true"
           />
       <TextView
           android:id="@+id/signup_txt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/not_a_account_yet_sign_up"
           android:textColor="@color/colorPrimary"
           android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
           android:layout_marginBottom="50dp"/>



   </RelativeLayout>
</RelativeLayout>