<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".StudenLoginDetailAvtivity">


        <RelativeLayout
            android:background="@drawable/square_two_side_rnd"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/oval_white"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_outline_person_24"
                android:layout_marginTop="-30dp"
                android:id="@+id/student_reg_image"
                tools:ignore="ContentDescription" />
            <EditText
                android:layout_width="match_parent"
                android:elevation="3dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:padding="9dp"
                android:layout_marginTop="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:inputType="textPersonName"
                android:drawableStart="@drawable/ic_outline_person_24"
                android:id="@+id/student_reg_name"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />

            <EditText
                android:elevation="3dp"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:padding="9dp"
                android:layout_below="@+id/student_reg_name"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:drawableStart="@drawable/ic_outline_person_24"
                android:id="@+id/student_reg_org"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />

            <EditText
                android:elevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:padding="9dp"
                android:layout_below="@id/student_reg_org"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:drawableStart="@drawable/ic_outline_book_24"
                android:id="@+id/student_reg_course"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                tools:ignore="LabelFor" />

            <EditText
                android:elevation="3dp"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:padding="9dp"
                android:layout_below="@+id/student_reg_course"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:drawableStart="@drawable/ic_outline_person_24"
                android:id="@+id/student_reg_branch"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />

            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle_button"
                android:text="@string/create"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/student_reg_branch"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/student_create_user"/>

        </RelativeLayout>

</RelativeLayout>